<%- include('../../fragments/header.ejs') %>
    <main>
      <h2>Car list</h2>
      <table class="table-list">
        <thead>
          <tr>
            <th>Brand</th>
            <th>Model</th>
            <th class="hide-mobile">Registration number</th>
            <th class="hide-mobile">Number of seats</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        <% for (let car of cars) { %>
          <tr>
            <td><%= car.brand %></td>
            <td><%= car.model %></td>
            <td class="hide-mobile"><%= car.registrationNumber %></td>
            <td class="hide-mobile"><%= car.numberOfSeats %></td>
            <td>
              <ul class="list-actions">
                <li>
                  <a
                    href="/cars/details/<%=car._id%>"
                    class="list-actions-button-details"
                    >Details</a
                  >
                </li>
                <li>
                  <a href="/cars/edit/<%=car._id%>" class="list-actions-button-edit"
                    >Edit</a
                  >
                </li>
                <li>
                  <a href="/cars/delete/<%=car._id%>" class="list-actions-button-delete">Delete</a>
                </li>
              </ul>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <p><a href="/cars/add" class="button-add">Add new car</a></p>
    </main>
<%- include('../../fragments/footer.ejs') %>
